import os
import certifi
import requests
import stripe
from dotenv import load_dotenv

# ğŸ“¥ Load environment variables from .env file
load_dotenv()

# ğŸ” Environment Variables
SHOPIFY_API_KEY = os.getenv("SHOPIFY_API_KEY")
SHOPIFY_API_SECRET = os.getenv("SHOPIFY_API_SECRET")  # Not used in this script
SHOPIFY_ADMIN_TOKEN = os.getenv("SHOPIFY_ADMIN_TOKEN")  # Required
stripe.api_key = os.getenv("STRIPE_SECRET_KEY")

# âœ… 1. Get all products from Shopify
print("ğŸ“¦ Fetching products from Shopify...")

# ğŸ›ï¸ Use your myshopify.com subdomain (NOT custom domain)
shopify_url = "https://j5wn1a-m6.myshopify.com/admin/api/2023-10/products.json"

headers = {
    "Content-Type": "application/json",
    "X-Shopify-Access-Token": SHOPIFY_ADMIN_TOKEN,
}

# Show which SSL cert file is being used
print("ğŸ” Using certificate from:", certifi.where())

# âš ï¸ Make the request with cert verification
response = requests.get(shopify_url, headers=headers, verify=certifi.where())

# ğŸš¨ Handle HTTP errors
if response.status_code != 200:
    print("âŒ Failed to fetch Shopify products:", response.text)
    exit()

# ğŸ“¦ Parse products
products = response.json().get('products', [])

# âœ… 2. Sync each to Stripe
for product in products:
    print(f"â¡ï¸ Creating product in Stripe: {product['title']}")

    try:
        # ğŸ†• Create the product in Stripe
        stripe_product = stripe.Product.create(
            name=product['title'],
            description=product.get('body_html', ''),
        )

        # ğŸ’° Create a price using the first variant
        variant = product['variants'][0]
        price = stripe.Price.create(
            unit_amount=int(float(variant['price']) * 100),  # Convert dollars to cents
            currency='usd',
            product=stripe_product.id,
        )

        print(f"âœ… Synced: {product['title']} (Price: {variant['price']})")

    except Exception as e:
        print(f"âŒ Error syncing product: {product['title']}")
        print(e)


